# Stripe Configuration
# Copy this file to .env and fill in your actual values

# Stripe API Keys (TEST KEYS FOR DEVELOPMENT)
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Webhook Configuration
STRIPE_WEBHOOK_SECRET=whsec_XXXX  # Replace with your webhook endpoint secret

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000  # Your frontend domain
BACKEND_URL=http://localhost:3000   # Your backend domain

# Product Configuration (optional - can be set in stripe-config.js instead)
STRIPE_PRICE_ID_STANDARD=price_XXXX  # Price ID for standard deck
STRIPE_PRICE_ID_COMPETITION=price_XXXX  # Price ID for competition deck

# Database Configuration (if you're using a database)
DATABASE_URL=postgresql://user:password@localhost:5432/karu_preorders

# Email Configuration (for confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Security
JWT_SECRET=your-jwt-secret-key-here
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max 100 requests per window

# Logging
LOG_LEVEL=info
